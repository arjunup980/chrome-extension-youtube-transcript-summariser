{ 
    "name": "Youtube summary extension v2",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "An extension to summarize youtube videos using the transcript",
    "permissions": ["activeTab", "declarativeContent"],
    "host_permissions": ["http://127.0.0.1:8000/*"],
 
    
    "action": {
        "default_title": "Summarise this video",
        "default_icon": {
            "16": "images/icon.png",
            "32": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        },
        "default_popup": "index.html"
    },

    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    }
}
